    </div>

    <div class="col-md-8">
        <div class="tile pb-5">
            <h3 class="tile-title">Historique des temps de production</h3>
            <div class="table-responsive">
                <table class="table table-striped table-hover table-sm">
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Temps</th>
                            <th>Date de saisie</th>
                            <th>Coût total</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for work_time in project.workTimes %}
                            <tr>
                                <td>{{ work_time.employee.fullName }}</td>
                                <td>{{ work_time.daysSpent }} jours</td>
                                <td>{{ work_time.createdat|date("d-m-Y") }}</td>
