{% extends 'layout.html.twig' %}

{% block title %}{{ project.name }} - {{ parent() }}{% endblock %}

{% block content %}
<div class="app-title">
    <div>
        <h1><i class="fa fa-laptop"></i>&nbsp;Suivi de {{ project.name }}</h1>
    </div>
    <ul class="app-breadcrumb breadcrumb">
        <li class="breadcrumb-item">
            <a href="#"><i class="fa fa-home fa-lg"></i></a>
        </li>
        <li class="breadcrumb-item">
            <a href="#">Projets</a>
        </li>
        <li class="breadcrumb-item">Suivi de {{ project.name }}</li>
    </ul>
</div>

{% include 'components/flash_display.html.twig' %}

<div class="row">
    <div class="col-md-4">
        <div class="tile">
            <table class="table table-striped table-bordered table-sm">
                <tbody>
                    <tr>
                        <th>Name</th>
                        <td>{{ project.name }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ project.description }}</td>
                    </tr>
                    <tr>
                        <th>Prix de vente</th>
                        <td>{{ project.price|format_currency('EUR') }}</td>
                    </tr>
                    <tr>
                        <th>Prix actuelle</th>
                        <td class={{ project.price < currentPrice ? "text-danger" }}>{{ currentPrice|format_currency('EUR') }}</td>
                    </tr>
                    <tr>
                        <th>Nombre d'employés ayant travaillé</th>
                        <td>{{ employeeCount }}</td>
                    </tr>
                    <tr>
                        <th>Date de création</th>
                        <td>{{ project.createdAt|date("d M Y") }}</td>
                    </tr>
                    {% if project.deliveredAt %}
                        <tr>
                            <th>Date de livraison</th>
                            <td>{{ project.deliveredAt|date("d M Y")}}</td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>
            <a href={{ path("project_update", { id: project.id })}} class="btn btn-info">
                <i class="fa fa-pencil"></i>Modifier
            </a>
        </div>

