{% extends 'layout.html.twig' %}

{% block title %}Page not found - {{ parent() }}{% endblock %}

{% block content %}
<!-- Page Content -->
<div class="d-flex align-items-center justify-content-center vh-100">
    <div class="text-center">
        <i class="fa-solid fa-circle-exclamation text-danger" style="font-size: 5rem;"></i>
        <h1 class="display-1 fw-bold">{{ status_code }}</h1>
        <p class="fs-3"> <span class="text-danger">Opps!</span> Something went wrong.</p>
        <p class="lead">
            There seems to be an error on our part.<br>
            Sorry for any inconvenience caused.
        </p>
        <a href={{ path('main_homepage') }} class="btn btn-primary">Go Home</a>
    </div>
</div>
{% endblock %}